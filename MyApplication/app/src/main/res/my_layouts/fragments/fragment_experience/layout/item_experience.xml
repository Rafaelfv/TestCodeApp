<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"

        android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
            android:layout_margin="@dimen/marginCardView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            card_view:cardCornerRadius="@dimen/radiusCardExperience"
    >
        <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView android:layout_width="match_parent"
                      android:layout_height="@dimen/heightTextTitleExperience"
                      style="@style/tvInfoProfile"
                      android:id="@+id/tvTitleExp_fe"
            />
            <TextView android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:layout_below="@+id/tvTitleExp_fe"
                      style="@style/tvInfoExperiece"
                      android:id="@+id/tvTxtExp_fe"

            />



        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
