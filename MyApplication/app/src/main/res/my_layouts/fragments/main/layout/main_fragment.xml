<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:showIn="@layout/activity_main"
        android:background="@color/backgroundColorOne"
>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="@dimen/dimentionBoxBtnsMain_height"
                  android:layout_margin="@dimen/dimentionBoxBtnsMain_margin"
                  android:orientation="vertical"
                  android:weightSum="3"
    >
        <Button android:layout_width="match_parent"
                android:layout_height="@dimen/dimentionZero"
                android:layout_weight="1"
                android:layout_margin="@dimen/marginBtnGeneric"
                style="@style/buttonGeneric"
                android:text="@string/frg_main_btn_perfil"
                android:id="@+id/btnProfile_fgtMain"
        />

        <Button android:layout_width="match_parent"
                android:layout_height="@dimen/dimentionZero"
                android:layout_weight="1"
                android:layout_margin="@dimen/marginBtnGeneric"
                style="@style/buttonGeneric"
                android:text="@string/frg_main_btn_experience"
                android:id="@+id/btnExperience_fgtMain"
        />
        <Button android:layout_width="match_parent"
                android:layout_height="@dimen/dimentionZero"
                android:layout_weight="1"
                android:layout_margin="@dimen/marginBtnGeneric"
                style="@style/buttonGeneric"
                android:text="@string/frg_main_btn_education"
                android:id="@+id/btnSchool_fgtMain"
        />

    </LinearLayout>

</RelativeLayout>